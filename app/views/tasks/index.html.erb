<h1>The Tasks Page</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
    <th></th>
  </tr>

  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.text %></td>
      <td><%= link_to 'Show', task %></td>
      <td><%= link_to 'Edit' edit_task_path(task) %></td>
      <td><%= link_to 'Destroy', task_path(task),
                      method: :delete, data: {confirm: Are you sure?} %></td>
      </td>
    </tr>
  <% end %>
</table>

